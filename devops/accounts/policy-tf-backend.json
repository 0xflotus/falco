{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "dynamodb:CreateTable",
        "dynamodb:DeleteItem",
        "dynamodb:DeleteTable",
        "dynamodb:DescribeContinuousBackups",
        "dynamodb:DescribeTable",
        "dynamodb:GetItem",
        "dynamodb:PutItem"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:dynamodb:${region}:${account_id}:table/${project_name}-main-terraform-state-lock",
        "arn:aws:dynamodb:${region}:${account_id}:table/${project_name}-main-terraform-state-lock/*"
      ]
    },
    {
      "Action": [
        "dynamodb:DescribeTimeToLive",
        "dynamodb:ListTagsOfResource",
        "dynamodb:TagResource"
      ],
      "Effect": "Allow",
      "Resource": [
        "*"
      ]
    },
    {
      "Action": [
        "s3:*"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::${project_name}-main-terraform-state",
        "arn:aws:s3:::${project_name}-main-terraform-state/*"
      ]
    },
    {
      "Action": [
        "s3:GetBucketObjectLockConfiguration"
      ],
      "Effect": "Allow",
      "Resource": [
        "*"
      ]
    }
  ]
}
