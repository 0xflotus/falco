{
    "name": "Falco",
    "description": "A Heroku version of Falco",
    "repository": "https://github.com/theodo/falco",
    "logo": "https://user-images.githubusercontent.com/2587348/51670042-0f2b6a80-1fc6-11e9-8080-c3195853ba62.png",
    "keywords": ["nginx", "docker", "proxy"],
    "stack": "container",
    "addons": ["heroku-postgresql:hobby-dev", "heroku-redis"],
    "env": {
      "DJANGO_SETTINGS_MODULE": "root.settings.prod",
      "MEDIA_BUCKET": "falco-staging-media",
      "PUBLIC_URL": "/static/front",
      "DB_CYPHER_KEY": {
              "description": "This gets generated",
              "generator": "secret"
      },
      "SECRET_KEY": {
              "description": "This gets generated",
              "generator": "secret"
      },
      "EMAIL_HOST": {
              "description": "",
              "value": "smtp.gmail.com"
      },
      "EMAIL_USER": {
              "description": "",
              "value": ""
      },
      "EMAIL_PASSWORD": {
              "description": "",
              "value": ""
      },
      "EMAIL_PORT": {
              "description": "",
              "value": "587",
              "required": false
      },
      "EMAIL_FROM": {
              "description": "Who sends the mail",
              "value": "dev@getfal.co",
              "required": false
      },
      "EMAIL_TO": {
              "description": "Who should receive the mails",
              "value": "dev@getfal.co",
              "required": false
      },
      "ALLOWED_HOST": {
              "description": "",
              "value": ""
      },
      "REACT_APP_API_BASE_URL": {
              "description": "",
              "value": ""
      }
    },
    "scripts": {
      "postdeploy": "./manage.py shell -c \"from django.contrib.auth.models import User; User.objects.create_superuser('admin', $EMAIL_FROM, 'admin')\""
    },
    "success_url": "/admin/"
  }